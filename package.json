{
  "name": "bharat-verify",
  "version": "1.0.0",
  "description": "A powerful and lightweight validation library for Indian PAN numbers, Aadhaar numbers, GSTIN, mobile phone numbers, and IFSC codes. Ideal for KYC, fintech, banking, and verification workflows.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup src/index.ts --format esm,cjs --dts --sourcemap --watch",
    "build": "tsup src/index.ts --format esm,cjs --dts --sourcemap --minify --clean",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm test -- --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "india",
    "validation",
    "pan",
    "aadhaar",
    "gstin",
    "phone",
    "ifsc"
  ],
  "author": {
    "name": "Rohit Kumar",
    "url": "https://github.com/rohit-kumaar"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rohit-kumaar/bharat-verify"
  },
  "homepage": "https://github.com/rohit-kumaar/bharat-verify#readme",
  "bugs": {
    "url": "https://github.com/rohit-kumaar/bharat-verify/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.0",
    "typescript": "^5.5.0",
    "rimraf": "^5.0.0"
  }
}
